---
import PocketBase from 'pocketbase';
const pb = new PocketBase('https://my-pocketbase-deploy-production.up.railway.app');

// Fetch all artists from PocketBase
const artists = await pb.collection('artists').getFullList();
---

<html>
  <head>
    <title>Artists</title>
  </head>
  <body>
    <h1>Artists</h1>
    <ul>
      {artists.map(artist => (
        <li>
          <a href={`/artists/${artist.slug}`}>{artist.name}</a>
        </li>
      ))}
    </ul>
  </body>
</html>
